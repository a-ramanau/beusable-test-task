<?xml version="1.0"?>

<ruleset name="Code Quality PMD Rules"
  xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

  <description>
    Code Quality PMD Rules
  </description>

  <rule ref="category/java/bestpractices.xml">
    <exclude name="GuardLogStatement"/>
    <exclude name="JUnitTestsShouldIncludeAssert"/>
  </rule>
  <rule ref="category/java/bestpractices.xml/JUnitTestContainsTooManyAsserts">
    <properties>
      <property name="maximumAsserts" value="10"/>
    </properties>
  </rule>
  <rule ref="category/java/codestyle.xml">
    <exclude name="CommentDefaultAccessModifier"/>
    <exclude name="ConfusingTernary"/>
    <exclude name="FinalParameterInAbstractMethod"/>
    <exclude name="LongVariable"/>
    <exclude name="OnlyOneReturn"/>
    <exclude name="ShortClassName"/>
    <exclude name="ShortMethodName"/>
    <exclude name="ShortVariable"/>
    <exclude name="TooManyStaticImports"/>
  </rule>
  <rule ref="category/java/codestyle.xml/LinguisticNaming">
    <properties>
      <property name="ignoredAnnotations" value="java.lang.Override"/>
      <property name="checkBooleanMethod" value="true"/>
      <property name="checkGetters" value="true"/>
      <property name="checkSetters" value="true"/>
      <property name="checkPrefixedTransformMethods" value="true"/>
      <property name="checkTransformMethods" value="false"/>
      <property name="booleanMethodPrefixes" value="is,has"/>
      <property name="transformMethodNames" value="to,as"/>
      <property name="checkFields" value="true"/>
      <property name="checkVariables" value="true"/>
      <property name="booleanFieldPrefixes" value="is,has"/>
    </properties>
  </rule>
  <rule ref="category/java/codestyle.xml/MethodNamingConventions">
    <properties>
      <property name="methodPattern" value="[a-z][a-zA-Z0-9]*" />
      <property name="staticPattern" value="[a-z][a-zA-Z0-9]*" />
      <property name="nativePattern" value="[a-z][a-zA-Z0-9]*" />
      <property name="junit3TestPattern" value="test[A-Z0-9][a-zA-Z0-9]*" />
      <property name="junit4TestPattern" value="^should[A-Z][a-zA-Z0-9]+$" />
      <property name="junit5TestPattern" value="^should[A-Z][a-zA-Z0-9]+$" />
    </properties>
  </rule>
  <rule ref="category/java/design.xml">
    <exclude name="LawOfDemeter"/>
    <exclude name="LoosePackageCoupling"/>
    <exclude name="ExcessiveImports"/>
    <exclude name="TooManyFields"/>
    <exclude name="UseUtilityClass"/>
  </rule>
  <rule ref="category/java/design.xml/TooManyMethods">
    <properties>
      <property name="maxmethods" value="15"/>
    </properties>
  </rule>
  <rule ref="category/java/documentation.xml">
    <exclude name="CommentRequired"/>
  </rule>
  <rule ref="category/java/errorprone.xml">
    <exclude name="AvoidDuplicateLiterals"/>
    <exclude name="MissingSerialVersionUID"/>
    <exclude name="TestClassWithoutTestCases"/>
    <exclude name="UseLocaleWithCaseConversions"/>
  </rule>
  <rule ref="category/java/errorprone.xml/AvoidLiteralsInIfCondition">
    <properties>
      <property name="ignoreMagicNumbers" value="-1,0,1"/>
      <property name="ignoreExpressions" value="true"/>
    </properties>
  </rule>
  <rule ref="category/java/multithreading.xml">
    <exclude name="DoNotUseThreads"/>
    <exclude name="UseConcurrentHashMap"/>
  </rule>
  <rule ref="category/java/performance.xml"/>
  <rule ref="category/java/security.xml"/>

  <rule name="LocalVariableDeclarationViolation"
    language="java"
    message="Local variable should be defined with 'final var' keywords"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
            //LocalVariableDeclaration[string(@TypeInferred) = "false" or string(@Final) = "false"]
          ]]>
        </value>
      </property>
    </properties>
  </rule>

  <rule name="OptionalOrElseThrowWithoutArguments"
    language="java"
    message="Optional .orElseThrow() should be used with a meaningful exception as a parameter"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
            //ArgumentList[@Size = 0]/parent::MethodCall[@MethodName = "orElseThrow"]
          ]]>
        </value>
      </property>
    </properties>
  </rule>


  <rule name="ExplicitPrivateFieldDeclaration"
    language="java"
    message="There is no need to define private fields. Lombok is globally configured to mark them private"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
            //FieldDeclaration[@Visibility = "private" and string(@Static)="false"]
          ]]>
        </value>
      </property>
    </properties>
  </rule>

  <rule name="ImportViolation"
    language="java"
    message="Import of this class is prohibited"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
            //ImportDeclaration
              [starts-with(@ImportedName, "org.junit.jupiter.api.Assertions") or
              starts-with(@ImportedName, "org.hamcrest") or
              starts-with(@ImportedName, "javax.transaction.Transactional")]
              [not(starts-with(@ImportedName, "org.hamcrest.Matcher"))]
              [not(starts-with(@ImportedName, "org.hamcrest.BaseMatcher"))]
              [not(starts-with(@ImportedName, "org.hamcrest.Description"))]
          ]]>
        </value>
      </property>
    </properties>
  </rule>

  <rule name="MockBeanDeclarationViolation"
    language="java"
    message="Mock and spy beans should be defined in BaseIntegrationTest"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
              //ClassDeclaration[@SimpleName != "BaseIntegrationTest"]/ClassBody/FieldDeclaration/ModifierList
              /Annotation[@SimpleName = "SpyBean" or @SimpleName = "MockBean"]
          ]]>
        </value>
      </property>
    </properties>
  </rule>

  <rule name="WireMockIntegrationTestDeclarationViolation"
    language="java"
    message="Wiremock integration tests should extend WireMockIntegrationTest"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
              //Annotation[@SimpleName = "AutoConfigureWireMock"]/ancestor::ClassDeclaration[@SimpleName != "WireMockIntegrationTest"]
          ]]>
        </value>
      </property>
    </properties>
  </rule>

  <rule name="IntegrationTestNameConventionViolation"
    language="java"
    message="Integration test class name should end with 'IntegrationTest'"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
              //ExtendsList/ClassType[@SimpleName = "BaseIntegrationTest"]
              /ancestor::ClassDeclaration[not(ends-with(@SimpleName, "IntegrationTest"))]
          ]]>
        </value>
      </property>
    </properties>
  </rule>

  <rule name="ValidationDeclarationViolation"
    language="java"
    message="Validation should be used on a service level"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
              //Annotation[@SimpleName="RestController"]/../following-sibling::ClassBody/descendant::Annotation[@SimpleName="Valid"]
          ]]>
        </value>
      </property>
    </properties>
  </rule>

  <rule name="RepositoryQueryDeclarationViolation"
    language="java"
    message="Consider using JPA specifications or @Query annotation"
    class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <priority>1</priority>
    <properties>
      <property name="xpath">
        <value>
          <![CDATA[
              //ExtendsList/ClassType[@SimpleName = "UuidEntityRepository"]/../following-sibling::ClassBody
              /descendant::MethodDeclaration/ModifierList[not(*)]
          ]]>
        </value>
      </property>
    </properties>
  </rule>

</ruleset>
